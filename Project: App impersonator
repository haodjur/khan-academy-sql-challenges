/* What does the app's SQL look like? */
CREATE TABLE workout (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    body TEXT,
    workout_type TEXT,
    location TEXT,
    time_of_day TEXT, 
    duration_in_mins INTEGER);
    
INSERT INTO workout (body, workout_type, location, time_of_day, duration_in_mins)
VALUES ("full body", "cardio", "gym", "evening", 30);
